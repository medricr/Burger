<h1 class='text-centered'>Eat-Da-Burger!</h1>

<div class='container'>
    <div class='row'>
        <div class='col-sm-6'>
            <h4>~~ Uneaten burgers ~~</h4>
            {{#each burger_table}}
                {{#unless this.devoured}}
                        <button type='submit' class='eat_burger_btn' value={{this.id}}>{{this.burger_name}}</button>
                {{/unless}}
            {{/each}}
        </div>
        <div class='col-sm-6'>
            <h4>~~ Eaten burgers ~~</h4>
            {{#each burger_table}}
                {{#if this.devoured}}
                    {{this.burger_name}}
                {{/if}}
            {{/each}}
        </div>
    </div>
    <div class='row'>
        <div class = 'col-sm-12'>
            <form>
                <div class='form-group'>
                    <label>Create a Burger!</label>
                    <input type='text' class='form-control' id='new_burger' placeholder='Chise Borger'>
                    <button class = 'btn btn-primary' type='submit' id='new_burger_btn'>CREATE UR BURGER</button>
                </div>
            </form>
        </div>
    </div>
</div>
